{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": [
      "vite-plugin-info/client",
      "vite-plugin-pages/client",
    ],
    "useDefineForClassFields": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/*.d.ts"
  ],
  "exclude": [
    "**/dist/**"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}