{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "~/*": ["./src/*"],
      "@animepaste/bangumi": ["../bangumi/types.d.ts"],
      "@animepaste/bangumi/*": ["../bangumi/dist/*"],
      "@animepaste/bangumi/client": ["../bangumi/client.d.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "vite/client",
      "vite-plugin-pwa/client",
      "vite-plugin-info/client",
      "vite-plugin-pages/client",
      "@animepaste/bangumi/client"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    "**/dist/**"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../bangumi/src/**/*.ts",
    "../bangumi/dist/**/*.d.ts",
    "../functions/**/*.ts",
    "../functions/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}