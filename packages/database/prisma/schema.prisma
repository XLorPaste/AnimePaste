datasource db {
  provider = "sqlite"
  url      = "file:./anime.db"
}

generator client {
  provider = "prisma-client-js"
}

model Resource {
  id        String   @id
  type      String
  title     String   @unique
  fansub    String
  magnet    String
  createdAt DateTime
  keywords  String   @default("")

  Video   Video?
  Episode Episode?
}

model Video {
  id        String
  platform  String
  title     String
  createdAt DateTime
  cover     String?
  playUrls  String

  magnet    Resource? @relation(fields: [magnetId], references: [id])
  magnetId  String?   @unique
  directory String?
  hash      String?

  @@id([id, platform])
}

model Episode {
  magnet   Resource @relation(fields: [magnetId], references: [id])
  magnetId String   @id

  bgmId  Int
  ep     Int    @default(1)
  fansub String @default("")
  attrs  String @default("[]")
}
