{
  "name": "@animepaste/monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm build:cli && pnpm build:app",
    "build:all": "pnpm -r build",
    "build:app": "pnpm -C packages/app build",
    "build:cli": "pnpm -C packages/database build && pnpm -C packages/cli build",
    "dev": "wrangler pages dev --kv ANIME --binding DEV=true ENABLE_PUBLIC=true -- vite ./packages/app",
    "format": "prettier --write packages/**/*.{ts,vue}",
    "test": "pnpm -r test -- --run"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vitest": "^0.18.0",
    "wrangler": "^2.0.21"
  },
  "packageManager": "pnpm@7.5.1",
  "engines": {
    "node": ">=v16.16.0"
  }
}
