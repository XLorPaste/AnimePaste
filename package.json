{
  "name": "@animepaste/monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm build:cli && pnpm build:app",
    "build:all": "pnpm -r build",
    "build:app": "pnpm build:bgm && pnpm -C packages/app build",
    "build:bgm": "pnpm -C packages/bangumi build",
    "build:cli": "pnpm build:bgm && pnpm -C packages/database build && pnpm -C packages/cli build",
    "build:docs": "pnpm -C docs build",
    "build:site": "optc scripts/build.ts",
    "dev": "pnpm -C packages/app dev",
    "dev:docs": "pnpm -C docs dev",
    "format": "prettier --write ./**/*.{js,ts,vue}",
    "release": "bumpp package.json */package.json packages/*/package.json !packages/bangumi --commit --push --tag && pnpm -r publish --access public",
    "release:bgm": "pnpm -C packages/bangumi release",
    "test": "pnpm -r test -- --run",
    "preversion": "pnpm test && pnpm build:cli"
  },
  "devDependencies": {
    "@types/node": "^18.6.5",
    "optc": "^0.3.6",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "vite": "^3.0.9",
    "vitest": "^0.22.1"
  },
  "packageManager": "pnpm@7.9.3",
  "engines": {
    "node": ">=v16.16.0"
  }
}
