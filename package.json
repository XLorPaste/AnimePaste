{
  "name": "@animepaste/monorepo",
  "version": "0.0.4",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter !docs",
    "build:all": "turbo run build",
    "build:app": "turbo run build --filter @animepaste/app...",
    "build:bgm": "turbo run build --filter @animepaste/bangumi...",
    "build:cli": "turbo run build --filter animepaste...",
    "build:docs": "turbo run build --filter docs",
    "build:site": "optc scripts/build.ts",
    "dev": "pnpm -C packages/app dev",
    "dev:cli": "pnpm -C packages/cli dev",
    "dev:docs": "pnpm -C docs dev",
    "format": "prettier --write ./**/*.{js,ts,vue} --ignore-path .prettierignore",
    "release": "bumpp package.json docs/package.json packages/*/package.json !packages/bangumi --commit --push --tag && pnpm -r publish --access public",
    "release:bgm": "pnpm -C packages/bangumi release",
    "test": "pnpm -r test -- --run",
    "typecheck": "pnpm -r typecheck",
    "preversion": "pnpm test",
    "postversion": "pnpm build:cli"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "bumpp": "latest",
    "optc": "latest",
    "prettier": "latest",
    "turbo": "latest",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.27.2"
  },
  "packageManager": "pnpm@7.25.1",
  "engines": {
    "node": ">=v16.0.0"
  }
}
